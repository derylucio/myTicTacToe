<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:text="Welcome to TicTacToe"
            android:textSize="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/grid"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:rowCount="3"
        android:columnCount="3"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button android:textSize="30dp" android:id="@+id/b0" android:padding="30dp" android:onClick="putMark"/>
        <Button android:textSize="30dp" android:id="@+id/b3" android:padding="30dp" android:onClick="putMark"/>
        <Button android:textSize="30dp" android:id="@+id/b6" android:padding="30dp" android:onClick="putMark"/>
        <Button android:textSize="30dp" android:id="@+id/b1" android:padding="30dp" android:onClick="putMark"/>
        <Button android:textSize="30dp" android:id="@+id/b4" android:padding="30dp" android:onClick="putMark"/>
        <Button android:textSize="30dp" android:id="@+id/b7" android:padding="30dp" android:onClick="putMark"/>
        <Button android:textSize="30dp" android:id="@+id/b2" android:padding="30dp" android:onClick="putMark"/>
        <Button android:textSize="30dp" android:id="@+id/b5" android:padding="30dp" android:onClick="putMark"/>
        <Button android:textSize="30dp" android:id="@+id/b8" android:padding="30dp" android:onClick="putMark"/>
    </GridLayout>
    <Button
        android:onClick="clearAll"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/grid"
        android:layout_width="wrap_content"
        android:text="New Game"
        android:textSize="15dp"
        android:layout_height="wrap_content" />

</RelativeLayout>
